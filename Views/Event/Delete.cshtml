@model laba6.Models.Event
@{
    ViewBag.Title = "Удаление мероприятия";
}

<div>
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.EventName)
        </dd>


    </dl>

    <div>
        <form asp-controller="Event" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>